# editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
max_line_length = 120
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length=off
trim_trailing_whitespace = false

[*.{yaml,yml}]
max_line_length=off
indent_size = 2
trim_trailing_whitespace = false

[.gitmodules]
indent_style = tab

[Dockerfile]
indent_style = tab

[{Makefile,*.mk}]
indent_style = tab

[*.sh]
indent_style = tab
